<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jingdong.view.LoginActivity">

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/cha" />

    <TextView
        android:id="@+id/my_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_image"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="103dp"
        android:layout_marginStart="103dp"
        android:layout_toEndOf="@+id/my_image"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/my_image"
        android:text="京东登录" />

    <TextView
        android:id="@+id/my_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_image"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="63dp"
        android:textSize="20dp"
        android:text="账号" />

    <EditText
        android:id="@+id/my_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/my_user"
        android:layout_alignBottom="@+id/my_user"
        android:layout_toEndOf="@+id/my_user"
        android:layout_toRightOf="@+id/my_user"
        android:ems="20"
        android:hint="用户名/邮箱/手机号"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/my_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_user"
        android:layout_alignStart="@+id/my_user"
        android:layout_below="@+id/my_shu"
        android:layout_marginTop="29dp"
        android:textSize="20dp"
        android:text="密码" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_password"
        android:layout_toEndOf="@+id/my_password"
        android:layout_toRightOf="@+id/my_password"
        android:ems="20"
        android:hint="请输入密码"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_user"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@mipmap/yannormal" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/my_password"
        app:srcCompat="@mipmap/yannormal" />

    <Button
        android:id="@+id/my_but_login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="登录" />

    <TextView
        android:id="@+id/my_tv_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_password"
        android:layout_alignStart="@+id/my_password"
        android:layout_below="@+id/my_but_login"
        android:text="注册账号" />

    <TextView
        android:id="@+id/my_tv_wang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/my_tv_zhuce"
        android:text="忘记密码?" />

    <ImageView
        android:id="@+id/my_qq_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        app:srcCompat="@mipmap/mqq" />

    <ImageView
        android:id="@+id/my_weixin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/my_qq_login"
        android:layout_toLeftOf="@+id/my_but_login"
        android:layout_toStartOf="@+id/my_but_login"
        app:srcCompat="@mipmap/weixin" />

</RelativeLayout>
