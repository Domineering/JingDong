<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jingdong.view.ZhuCeActivity">

    <ImageView
        android:id="@+id/zhuce_fan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/leftjiantou" />

    <TextView
        android:id="@+id/zhuce_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zhuce_fan"
        android:textColor="#19e7a6"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:text="快速注册" />

    <TextView
        android:id="@+id/zhuce_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/zhuce_fan"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="59dp"
        android:textSize="20dp"
        android:text="账号" />

    <EditText
        android:id="@+id/zhuce_user_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zhuce_user"
        android:layout_toEndOf="@+id/zhuce_user"
        android:layout_toRightOf="@+id/zhuce_user"
        android:ems="20"
        android:inputType="textPersonName"
        android:hint="邮箱/手机号/账号"
         />

    <TextView
        android:id="@+id/zhuce_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zhuce_user"
        android:layout_alignStart="@+id/zhuce_user"
        android:layout_below="@+id/zhuce_user_shu"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="密码" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zhuce_password"
        android:layout_toEndOf="@+id/zhuce_password"
        android:layout_toRightOf="@+id/zhuce_password"
        android:ems="20"
        android:inputType="textPersonName"
        android:hint="请输入密码" />

    <Button
        android:id="@+id/zhuce_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/zhuce_title"
        android:layout_alignRight="@+id/zhuce_title"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="20dp"
        android:text="注册" />

</RelativeLayout>
